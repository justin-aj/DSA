from collections import deque

class Solution:
    def invertTree(self, root: Optional[TreeNode]) -> Optional[TreeNode]:
        if not root:
            return None

        dq = deque([root])
        while dq:
            node = dq.popleft()

            node.left, node.right = node.right, node.left

            if node.left:
                dq.append(node.left)
            if node.right:
                dq.append(node.right)

        return root
